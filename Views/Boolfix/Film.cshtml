@{
    Layout = "_logLayout";
}
@model List<Film>


<ul>
    @foreach (Film item in Model)
    {
        <li> @item.Name </li>
        <li>
            <a  class="btn btn-primary d-block" style="color : white ; width : 100 px ; " href="@Url.Action( "ShowFilm" ,new {id = item.Id}) "  >
            dettagli
            </a >

            <a class="btn btn-primary d-block" style="color : white ; width : 100 px ; " href="@item.VideUrl ">
                riproduci
            </a>

            <a class="btn btn-primary d-block" asp-area="" asp-controller="CrudFilmSerieTv" asp-action="UpdateFilm" asp-route-id="@item.Id">
                modifica dati film
            </a>
            <form asp-controller="CrudFilmSerieTv" asp-action="DeleteFilm" method="post" asp-route-id="@item.Id">
                <button class="btn btn-primary d-block" type="submit">
                   elimina film
                </button>
            </form>
        </li>

    }
</ul>