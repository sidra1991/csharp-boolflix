@model Series



<div class="container">
    <form asp-controller="CrudFilmSerieTv" asp-action="UpdateSeries" asp-route-id="@Model.Id" method="post">

        <div class="mb-3">
            <label for="Name" class="form-label">Nome</label>
            <input asp-for="@Model.Name" class="form-control" placeholder="@Model.Name" />
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>

        <div class="mb-3 form-check">
            <label for="immage" class="form-label">immagine</label>
            <input type="text" asp-for="@Model.immage" placeholder="@Model.immage" />
            <span asp-validation-for="@Model.immage" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
