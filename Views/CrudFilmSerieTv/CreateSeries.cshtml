@{
}

@model Series

<div class="container" >
    <form asp-controller="CrudFilmSerieTv" asp-action="CreateSeries" method="post">
        <div class="mb-3">
            <label for="Immage" class="form-label">Immagine</label>
            <input asp-for="@Model.immage" class="form-control" aria-describedby="emailHelp" />
            <span asp-validation-for="@Model.immage" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="Name" class="form-label">Nome</label>
            <input asp-for="@Model.Name" class="form-control" />
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>

    </form>
</div>