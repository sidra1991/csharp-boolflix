@{
Layout = "_Layout";
}

@model FormSeason

<form asp-controller="CrudFilmSerieTv" asp-action="CreateSeason" method="post">
    <select asp-for="@Model.SerieId">
    @foreach (Series item in Model.series)
    {
        <option value="@item.Id"> @item.Name </option>
    }
    </select>
    <div class="mb-3">
        <label for="Name" class="form-label">Nome</label>
        <input asp-for="@Model.season.Title" class="form-control" />
        <span asp-validation-for="@Model.season.Title" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>

</form>

