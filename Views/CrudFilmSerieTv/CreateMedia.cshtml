@{
    Layout = "_Layout";
}

@model FormMedia

<form asp-controller="CrudFilmSerieTv" asp-action="CreateMedia" method="post">
    <select asp-for="@Model.SeasonId">
        @foreach (Series item in Model.series)
        {
            <p>Serie---->  @item.Name </p>

            @foreach (Season item2 in item.Seasons)
            {
                <option value="@item2.Id"> @item2.Title </option>
            }
            
        }
    </select>
  

    <div class="mb-3">
        <label for="Name" class="form-label">Nome</label>
        <input asp-for="@Model.Media.Name" class="form-control" />
        <span asp-validation-for="@Model.Media.Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="Immage" class="form-label">immagine</label>
        <input asp-for="@Model.Media.Immage" class="form-control" />
        <span asp-validation-for="@Model.Media.Immage" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="video" class="form-label">video</label>
        <input asp-for="@Model.Media.VideUrl" class="form-control" />
        <span asp-validation-for="@Model.Media.VideUrl" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>

</form>

